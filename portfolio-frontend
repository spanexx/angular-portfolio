
server {
    server_name spanexx.com www.spanexx.com;

    root /home/ubuntu/Portfolio/dist/angular-portfolio/browser;
    index index.html;

    location / {
        try_files $uri $uri/ /index.html;
    }

    location /api {
        proxy_pass http://localhost:8080;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/spanexx.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/spanexx.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot


}

server {
    if ($host = www.spanexx.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    if ($host = spanexx.com) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name spanexx.com www.spanexx.com;
    return 404; # managed by Certbot




}